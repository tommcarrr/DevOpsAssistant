                <SimpleApexChart SeriesType="SeriesType.Line" Series="_sprintApex" FormatYAxisLabel="FormatValue" Height="@ChartHeight(_sprintExpanded)" />
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="@(_burnExpanded ? 12 : 6)">
            <MudPaper Class="pa-6">
