                        <MudIconButton Icon="@Icons.Material.Filled.OpenInFull" Size="Size.Small" OnClick="ShowWipChart" title='@L["ExpandChart"]'/>
                    </MudStack>
                    <MudChart ChartType="ChartType.Line"
